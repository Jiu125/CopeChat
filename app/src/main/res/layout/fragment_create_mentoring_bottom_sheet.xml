<!--                        style="@style/Widget.MaterialComponents.Chip.Choice"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="2회" />-->
<!--                    <com.google.android.material.chip.Chip-->
<!--                        style="@style/Widget.MaterialComponents.Chip.Choice"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="3회" />-->
<!--                    <com.google.android.material.chip.Chip-->
<!--                        style="@style/Widget.MaterialComponents.Chip.Choice"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="4회" />-->
<!--                </com.google.android.material.chip.ChipGroup>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="전체 세션 횟수 *"
                    android:textColor="#111827"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_week_session"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_rounded"
                    android:hint="예: 12"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="#F0F5FF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_sparkles"
                                android:background="@drawable/bg_rounded_purple"
                                android:backgroundTint="#2563EB"
                                android:padding="4dp"
                                app:tint="#FFFFFF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="멘토링 요약"
                                android:textStyle="bold"
                                android:textColor="#111827"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="제목"
                                android:textColor="#6B7280"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tv_summary_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#111827"
                                android:maxWidth="150dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="13sp"/>
                        </LinearLayout>

<!--                        <LinearLayout-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginBottom="8dp">-->
<!--                            <TextView-->
<!--                                android:layout_width="0dp"-->
<!--                                android:layout_weight="1"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:text="카테고리"-->
<!--                                android:textColor="#6B7280"-->
<!--                                android:textSize="13sp"/>-->
<!--                            <TextView-->
<!--                                android:id="@+id/tv_summary_category"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:text="-"-->
<!--                                android:textColor="#FFFFFF"-->
<!--                                android:background="@drawable/bg_badge_blue_solid"-->
<!--                                android:paddingHorizontal="6dp"-->
<!--                                android:paddingVertical="2dp"-->
<!--                                android:textSize="11sp"/>-->
<!--                        </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="전체 멘토링 가격"
                                android:textColor="#6B7280"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tv_summary_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0원"
                                android:textColor="#111827"
                                android:textSize="13sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="기간"
                                android:textColor="#6B7280"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tv_summary_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#111827"
                                android:textSize="13sp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#BFDBFE"
                            android:layout_marginVertical="12dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="1회당 멘토링 가격"
                                android:textStyle="bold"
                                android:textColor="#111827"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/tv_summary_per_session"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0원"
                                android:textStyle="bold"
                                android:textColor="#2563EB"
                                android:textSize="18sp"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFBEB"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_dialog_alert"
                        app:tint="#D97706"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="제안 전 확인하세요"
                            android:textStyle="bold"
                            android:textColor="#92400E"
                            android:textSize="13sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="멘토링 제안은 상대방과 협의 후 조정할 수 있습니다."
                            android:textColor="#92400E"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_prev"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_outline_gray"
            android:text="이전"
            android:textColor="#374151"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

        <Space
            android:id="@+id/space_button"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_primary"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>